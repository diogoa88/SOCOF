package Ex3;

import java.util.Random;

/**
 *
 * @author user
 */
public class Taxi extends Thread{
    
    private int numSeats;
    
    private RequestQueue queue;

    public Taxi(int numSeats, RequestQueue queue) {
        this.numSeats = numSeats;
        this.queue = queue;
    }
    
    
    
    public int getNumSeats() {
		return numSeats;
	}


	@Override
    public void run(){
        System.out.println("Taxi " + this.getId() + " start!");
        boolean exit = false;
        while(!exit) {
        	Request req = this.queue.getRequest();
        	if(req == null) {
        		exit= false;
        	}else {
        		long random = (long)(Math.random() * 2000 + 1);
        		this.sleep(random);
        	}
        }
        System.out.println("Taxi " + this.getId() + " end!");
    }
    
}

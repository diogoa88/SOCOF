package Ex3;

/**
 *
 * @author user
 */
public class Main {
    
    public static void Execute(){
        int NUM_TAXI = 10;
        int NUM_REQUEST = 100;
        
        RequestQueue queue = new RequestQueue();
        
       
        for (int i = 0; i < NUM_REQUEST; i++) {
            Request reqThread = new Request(3, queue);
            reqThread.start();
            
        }
        
        try {
			Thread.sleep(2000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
        
        for (int i = 0; i < NUM_TAXI; i++) {
            Thread taxi = new Taxi(3,queue);      
            taxi.start();
        }
    }
    
}

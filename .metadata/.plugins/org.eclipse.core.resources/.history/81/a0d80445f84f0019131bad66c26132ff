package Ex3;

/**
 *
 * @author user
 */
public class Taxi extends Thread{
    
    private int numSeats;
    
    private RequestQueue queue;

    public Taxi(int numSeats, RequestQueue queue) {
        this.numSeats = numSeats;
        this.queue = queue;
    }
    
    
    
    public int getNumSeats() {
		return numSeats;
	}


	@Override
    public void run(){
        System.out.println("Taxi " + this.getId() + " start!");
        boolean exit = false;
        while(!exit) {
        	System.out.println(this.queue.list);
        	Request req = this.queue.getRequest(this.getNumSeats());
        	if(req == null) {
        		exit= true;
        	}else {
        		System.out.println("Taxi " + this.getId() + " get Thread " + req.getId());
        		long random = (long)(Math.random() * 5000 + 1);
        		try {
					this.sleep(random);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
        		System.out.println("Taxi " + this.getId() + " transport Request" + req.getId());
        	}
        }
        System.out.println("Taxi " + this.getId() + " end!");
    }
    
}

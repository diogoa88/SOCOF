package Ex3;

/**
 *
 * @author user
 */
public class Request implements Runnable {

    
    private int numSeats ;
    
    private int id;

    public Request(int numSeats) {
        this.numSeats = numSeats;
    }
    
    public int getId() {
    	return this.id;
    }
    
    @Override
    public void run(){
        this.id = (int)Thread.currentThread().getId();
    }
    
}
